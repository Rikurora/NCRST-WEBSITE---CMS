{% extends 'base.html.twig' %}

{% block title %}ResearchPermits index{% endblock %}

{% block body %}
    <h1>ResearchPermits index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>File_type</th>
                <th>Size</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for research_permit in research_permits %}
            <tr>
                <td>{{ research_permit.id }}</td>
                <td>{{ research_permit.title }}</td>
                <td>{{ research_permit.description }}</td>
                <td>{{ research_permit.fileType }}</td>
                <td>{{ research_permit.size }}</td>
                <td>{{ research_permit.createdAt ? research_permit.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_research_permits_show', {'id': research_permit.id}) }}">show</a>
                    <a href="{{ path('app_research_permits_edit', {'id': research_permit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_research_permits_new') }}">Create new</a>
{% endblock %}
