{% extends 'base.html.twig' %}

{% block title %}NewsArticles{% endblock %}

{% block body %}
    <h1>NewsArticles</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ news_article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ news_article.title }}</td>
            </tr>
            <tr>
                <th>Excerpt</th>
                <td>{{ news_article.excerpt }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ news_article.content }}</td>
            </tr>
            <tr>
                <th>Read_time</th>
                <td>{{ news_article.readTime }}</td>
            </tr>
            <tr>
                <th>Image_url</th>
                <td>{{ news_article.imageUrl }}</td>
            </tr>
            <tr>
                <th>Featured</th>
                <td>{{ news_article.featured ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ news_article.createdAt ? news_article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_news_articles_index') }}">back to list</a>

    <a href="{{ path('app_news_articles_edit', {'id': news_article.id}) }}">edit</a>

    {{ include('news_articles/_delete_form.html.twig') }}
{% endblock %}
