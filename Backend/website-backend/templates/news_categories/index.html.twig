{% extends 'base.html.twig' %}

{% block title %}NewsCategories index{% endblock %}

{% block body %}
    <h1>NewsCategories index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for news_category in news_categories %}
            <tr>
                <td>{{ news_category.id }}</td>
                <td>{{ news_category.name }}</td>
                <td>
                    <a href="{{ path('app_news_categories_show', {'id': news_category.id}) }}">show</a>
                    <a href="{{ path('app_news_categories_edit', {'id': news_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_news_categories_new') }}">Create new</a>
{% endblock %}
