{% extends 'base.html.twig' %}

{% block title %}ResourceCategories index{% endblock %}

{% block body %}
    <h1>ResourceCategories index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for resource_category in resource_categories %}
            <tr>
                <td>{{ resource_category.id }}</td>
                <td>{{ resource_category.name }}</td>
                <td>
                    <a href="{{ path('app_resource_categories_show', {'id': resource_category.id}) }}">show</a>
                    <a href="{{ path('app_resource_categories_edit', {'id': resource_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_resource_categories_new') }}">Create new</a>
{% endblock %}
